<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="410px"
        android:background="@mipmap/bg_user_top"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px">

            <LinearLayout
                android:id="@+id/btn_base_back"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:background="@drawable/dw_btn_title_pressed"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_base_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22px"
                    android:background="@mipmap/icon_back"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_font_second_title" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_base_right"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_alignParentRight="true"
                android:background="@drawable/dw_btn_title_pressed"
                android:clickable="true"
                android:gravity="center"
                android:minWidth="90px">

                <TextView
                    android:id="@+id/tv_base_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22px"
                    android:background="@mipmap/ic_user_setting"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_font_second_title" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_default_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:text="未命名"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/ic_user_coin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img_user_coin"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_font_title" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_user_coin"
                        android:layout_toRightOf="@+id/img_user_coin"
                        android:text="我的金币"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="55px"
                    android:layout_height="55px"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/ic_user_coin" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_vitality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ic_user_vitality"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_font_title" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_user_coin"
                        android:layout_toRightOf="@+id/img_user_coin"
                        android:text="我的活跃度"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="40px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerInParent="true"
                android:layout_marginRight="20px"
                android:src="@mipmap/ic_user_nick_name" />

            <TextView
                style="@style/style_text"
                android:text="昵称"
                android:textSize="@dimen/text_font_second_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:drawableRight="@drawable/dw_arrow_right"
                android:gravity="right|center_vertical"
                android:text="未命名" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cl_app_bg"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerInParent="true"
                android:layout_marginRight="20px"
                android:src="@mipmap/ic_user_true_name" />

            <TextView
                style="@style/style_text"
                android:text="真实姓名"
                android:textSize="@dimen/text_font_second_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:drawableRight="@drawable/dw_arrow_right"
                android:gravity="right|center_vertical"
                android:text="未命名" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="40px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerInParent="true"
                android:layout_marginRight="20px"
                android:src="@mipmap/ic_user_sex" />

            <TextView
                style="@style/style_text"
                android:text="性别"
                android:textSize="@dimen/text_font_second_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:drawableRight="@drawable/dw_arrow_right"
                android:gravity="right|center_vertical"
                android:text="男" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cl_app_bg"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerInParent="true"
                android:layout_marginRight="20px"
                android:src="@mipmap/ic_user_true_name" />

            <TextView
                style="@style/style_text"
                android:text="登录密码"
                android:textSize="@dimen/text_font_second_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:drawableRight="@drawable/dw_arrow_right"
                android:gravity="right|center_vertical"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:paddingLeft="40px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_centerInParent="true"
            android:layout_marginRight="20px"
            android:src="@mipmap/ic_user_sex" />

        <TextView
            style="@style/style_text"
            android:text="单位"
            android:textSize="@dimen/text_font_second_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:drawableRight="@drawable/dw_arrow_right"
            android:gravity="right|center_vertical"
            android:text="请选择" />
    </LinearLayout>

</LinearLayout>
